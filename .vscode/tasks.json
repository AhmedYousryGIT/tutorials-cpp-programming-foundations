{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++17",
                "-I${workspaceFolder}/headers",
                "${fileDirname}/*.cpp",
                "${workspaceFolder}/src/sharedFns.cpp",
                "-o",
                "${workspaceFolder}/bin/${fileDirnameBasename}-${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            }
        }
    ],
    "version": "2.0.0"
}